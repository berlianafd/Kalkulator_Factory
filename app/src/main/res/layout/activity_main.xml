<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--        identitas trafo-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <RelativeLayout
                android:id="@+id/button_trafoId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TRAFO IDENTITY"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="8pt"
                    android:textColor="@color/white"
                    android:background="@drawable/button_accent_rounded"/>
                <ImageView
                    android:id="@+id/arrow_trafoId"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/arrow_up"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/konten_trafoId"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_name"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unit"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_unit"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Merk"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_merk"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voltage"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_voltage"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Power"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_power"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Years of Operation"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_yop"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pembebanan"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_pembebanan"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotspot Temperature"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_hts"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Measurement Date"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_meaDate"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paper Type"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:textColor="@color/black"/>

                    <RadioGroup
                        android:id="@+id/rgrup_paperType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                        <RadioButton
                            android:id="@+id/rbutton_Kraft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Kraft Paper"/>

                        <RadioButton
                            android:id="@+id/rbutton_TUP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thermally Upgraded Paper" />
                    </RadioGroup>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
<!--        dielectric char-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <RelativeLayout
