                        android:textSize="7pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_bdv"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"

                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/baris_water"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Water Content (%)"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_water"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/baris_acid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acidity* (mgKOH/g)"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_acid"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/baris_ift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interfal Tension*"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_ift"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/baris_col"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color (0-10)"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_col"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/baris_ddf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DDF"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_ddf"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/baris_sed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sediment (%)"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_sed"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

